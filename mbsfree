case $OPTION in
        (1) 
        curl -sO https://raw.githubusercontent.com/NT-Injector/PacoteFree/main/mbsfree1 && chmod 777 mbsfree1 && ./mbsfree1
        ;;
        (2) 
        curl -sO https://raw.githubusercontent.com/NT-Injector/PacoteFree/main/mbsfree2 && chmod 777 mbsfree2 && ./mbsfree2
        ;;
