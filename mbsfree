#!/bin/bash
cd $HOME
echo -e "\e[01;37;41m VERIFICANDO SE VOCÊ É O PAI \e[0m"|pv -qL 25
  spinner=(██▓░░░░░░░ ████▓░░░░░ ██████▓░░░ ████████▓░ ██████████)
   spin(){
      for i in "${spinner[@]}"
         do
        echo -ne "\r$i"; sleep 0.6
      done
   }; spin
  echo -e "\e[01;37mRESULTADO:";
sleep 3
apt install pv -y -qq --silent ; apt install jq -y -qq --silent ; apt install git -y -qq --silent ; apt install cmatrix -y -qq --silent
